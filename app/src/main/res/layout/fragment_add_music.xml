<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMusicFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etComposerNameAddmusic"
            android:layout_width="242dp"
            android:layout_height="0dp"
            android:layout_marginTop="228dp"
            android:layout_marginBottom="21dp"
            android:ems="10"
            android:hint="Composer Name.."
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/etPagesNumAddmusic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etPagesNumAddmusic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="18dp"
            android:ems="10"
            android:hint="pages number..."
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/etYearAddmusic"
            app:layout_constraintEnd_toEndOf="@+id/etYearAddmusic"
            app:layout_constraintStart_toStartOf="@+id/etYearAddmusic"
            app:layout_constraintTop_toBottomOf="@+id/etComposerNameAddmusic" />

        <EditText
            android:id="@+id/etYearAddmusic"
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:hint="year.."
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toTopOf="@+id/etPieceNameAddmusic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPagesNumAddmusic" />

        <EditText
            android:id="@+id/etPieceNameAddmusic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="63dp"
            android:ems="10"
            android:hint="piece name"
            android:inputType="phone"
            app:layout_constraintBottom_toTopOf="@+id/btnAdd"
            app:layout_constraintEnd_toEndOf="@+id/etYearAddmusic"
            app:layout_constraintStart_toStartOf="@+id/etComposerNameAddmusic"
            app:layout_constraintTop_toBottomOf="@+id/etYearAddmusic" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="117dp"
            android:layout_height="0dp"
            android:layout_marginBottom="118dp"
            android:text="add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPieceNameAddmusic" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>